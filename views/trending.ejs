<% layout("boilerplate") -%>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 w-100">
        <% for (const package of packages) { %>
            <div class="link-card">
                <div class="patta card col" style="border: none; border-radius: 1rem; cursor: pointer;">
                    <img src="<%= package.image %>" class="card-im" alt="Picture of package" style="height: 20rem;">
                    <div class="card-body bgc">
                        <h5 class="card-title">
                            <%= package.name %>
                        </h5>
                    </div>
                    <form action="/show/<%= package.id %>" style="display: flex; justify-content: center;">
                        <button class="form-control out"
                            style="text-align: center; font-weight: bolder; color: white; background-color: rgb(214, 132, 0); width: 100px; padding: 10px; border: none; border-radius: 10px;">Open</button>
                    </form>
                </div>
            </div>
            <% } %>
            <% if(!packages.length){ %> 
               <h3 style="margin-top: 20%; text-align: center; width: 100%;">Sorry to dissappoint you but we are not having any stores for you.</h3>
            <% } %>
    </div>